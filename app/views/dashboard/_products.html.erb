<div class="container" style="width: 100%">
<table id="products" class="table table-striped" style="width: inherit">
	<thead>
		<tr>
			<th>Name</th>
			<th>Store</th>
			<th>Price</th>
			<th>Quantity</th>
			<th>Edit | Delete</th>
		</tr>
	</thead>
	<tbody>
		<% @products = Product.all %>

		<% @products.each do |product| %>
		<% productUser = User.find(product.user_id) %>
		<% store = Store.find(product.store_id) %>
		<% if productUser.id == current_user.id %>
		<tr>
			<td><%= product.name %></td>
			<td><%= store.name %></td>
			<td><%= number_to_currency(product.price) %></td>
			<td><%= product.quantity %></td>

			<td> <%= link_to(edit_product_path(product), 'data-target' => "#myProduct",
			'data-toggle' => 'modal') do  %>
			<%= image_tag "editIcon.jpg", height: "50% !important", width: "40% !important", style: "max-height: 30px" %>
			<% end %>
			<div class="modal fade" id='<%= "myProduct" %>' tabindex="-1" role="dialog"
			aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
								&times;
							</button>
							<h4 class="modal-title" id="myModalLabel" align="left">Edit Product</h4>
						</div>
						<% @product = Product.find(product.id) %>
						<%= form_for @product do |f| %>
						<div class="modal-body">
							<%= render partial: 'products/edit', :locals => { f: f } %>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">
								Cancel
							</button>
							<%= f.submit "Save Product", class: "btn btn-primary" %>
						</div>
						<% end %>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- /.modal --> <%= link_to(@product, method: :delete, data: {confirm: 'Are you sure?'}) do  %>
			<%= image_tag "removeIcon.jpg", height: "50% !important", width: "40% !important", style: "max-height: 30px" %>
			<% end %> </td>
		</tr>
		<% end %>
		<% end %>

	</tbody>

</table>
</div>

<script>
$(document).ready(function(){
    $('#products').dataTable();
});
</script>